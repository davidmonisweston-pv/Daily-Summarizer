# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/daily_summarizer

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=Daily Summarizer <your-email@gmail.com>

# Microsoft Azure AD / Entra ID Configuration
# Create an app registration at https://portal.azure.com/#view/Microsoft_AAD_IAM/ActiveDirectoryMenuBlade/~/RegisteredApps
AZURE_AD_CLIENT_ID=your-client-id
AZURE_AD_CLIENT_SECRET=your-client-secret
AZURE_AD_TENANT_ID=your-tenant-id
# Redirect URI should be: http://localhost:5000/api/auth/callback (or your production URL)
AZURE_AD_REDIRECT_URI=http://localhost:5000/api/auth/callback

# Session Secret (generate a random string)
SESSION_SECRET=your-random-session-secret-change-this-in-production

# Google Gemini API Key (for AI research)
VITE_GEMINI_API_KEY=your-gemini-api-key

# Application URL
APP_URL=http://localhost:5000

# First Admin Email (this user will be made admin on first login)
FIRST_ADMIN_EMAIL=admin@yourdomain.com
